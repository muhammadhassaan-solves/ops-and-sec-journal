apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress-name
  namespace: app 
  annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/target-type: ip
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP":80},{"HTTPS":443}]'
    alb.ingress.kubernetes.io/certificate-arn: #copy from arn
    alb.ingress.kubernetes.io/ssl-redirect: "443"
spec:
  ingressClassName: alb
  rules:
    - host: abc.tech
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: abc-svc
                port:
                  number: 80 
    - host: cde.tech
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: cde-svc
                port:
                  number: 80
    - host: xyz.tech
      http:
        paths:
          - path: /order
            pathType: Prefix
            backend:
              service:
                name: xyz-svc
                port:
                  number: 4000
          - path: /
            pathType: Prefix
            backend:
              service:
                name: xyz-svc
                port:
                  number: 3000
